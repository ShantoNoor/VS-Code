	"Output Array": {
		"prefix": "oarray",
		"body": [
			"for(int i = ${1:InitialValue}; i < ${2:Length}; i++)",
			"{",
			"\tcout << ${3:ArrayName}[i] << \" \";",
			"}",
			"cout<<endl;",
			"${0}"
		]
	},
	"Input Array": {
		"prefix": "iarray",
		"body": [
			"for(int i = ${1:InitialValue}; i < ${2:ArrayLength}; i++)",
			"{",
			"\tcin >> ${3:ArrayName}[i];",
			"}",
			"${0}"
		]
	},
	"Structure": {
		"prefix": "c++",
		"body": [
			"#include <iostream>",
			"using namespace std;",
			"",
			"int main()",
			"{",
			"\t${0:/* code */}",
			"",
			"\treturn 0;",
			"}"
		]
	},
	"cout": {
		"prefix": "cout",
		"body": [
			"cout << ${0:value} << endl;"
		]
	},
	"test case printer": {
		"prefix": "coutc",
		"body": [
			"cout << \"Case \" << i+1 << \": \" << ${0:value} << endl;"
